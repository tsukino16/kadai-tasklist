<% if logged_in? %>
  <p>ログイン完了ユーザ： <%= current_user.name %></p>
  <h1>タスク一覧</h1>
  <ul>
    <% @tasks.each do |task| %>
      <li><%= link_to task.id, task %> ：タスク：<%= task.content %>＞状態：<%= task.status %></li>
    <% end %>
  </ul>
    <%= link_to '新規タスクの投稿', new_task_path %>  
    <%= link_to 'ログアウト', logout_path, method: :delete %>
<% else %>
  redirect_to login_path
<% end %>